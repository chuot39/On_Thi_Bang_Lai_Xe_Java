<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ÔnThiBằngLáiXe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="BoxDailog">
        <item name="android:background">#F8F8F8</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Theme.ÔnThiBằngLáiXe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ÔnThiBằngLáiXe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ÔnThiBằngLáiXe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>